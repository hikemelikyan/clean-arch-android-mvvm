<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background_gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DatePickerTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>

        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/dark_blue</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/window_background_gray</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.AnimationStyle</item>
        <item name="background">@android:color/white</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheetDialogTheme.Root" parent="BottomSheetDialogTheme"/>
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bcg_bottom_sheet_top_rounded_13</item>
    </style>

    <style name="BottomSheet.AnimationStyle">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_out</item>
    </style>

    <style name="PageContentStyle">
        <item name="android:paddingStart">@dimen/view_size_3</item>
        <item name="android:paddingEnd">@dimen/view_size_3</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>

    <style name="BaseBtnWidgetStyle">
        <item name="android:paddingStart">@dimen/view_size_3</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/view_size_3</item>
        <item name="android:paddingTop">@dimen/view_size_3</item>
        <item name="android:paddingBottom">@dimen/view_size_3</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="SignInEditStyle" parent="BaseBtnWidgetStyle">
        <item name="android:background">@drawable/bcg_sign_in_edit_text_bordered</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="AdapterItemStyle" parent="BaseBtnWidgetStyle">
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/bcg_ripple_list_item_rounded_11</item>
    </style>

    <style name="SupportEditStyle" parent="BaseBtnWidgetStyle">
        <item name="android:textColorHint">@color/support_edit_text_hint_color</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/view_size_2</item>
        <item name="android:paddingEnd">@dimen/view_size_2</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="SignInBorderedButtonStyle" parent="BaseBtnWidgetStyle">
        <item name="android:background">@drawable/bcg_ripple_trasnaparent_rounded_10_bordered</item>
    </style>

    <style name="GreenButtonStyle" parent="BaseBtnWidgetStyle">
        <item name="android:background">@drawable/bcg_ripple_green_rounded_10</item>
    </style>

</resources>